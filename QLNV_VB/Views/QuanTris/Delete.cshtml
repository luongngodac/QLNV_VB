@model QLNV_VB.Models.QuanTri

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    String ad = "";
}

<h2>Xóa</h2>

<h4 style="color:red">Bạn chắc chắn sẽ xóa?</h4>
<div>
    <h4>Quản Trị</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Quyền
        </dt>
        <dd>
            @{ if (Model.Admin == true)
                { ad = "Quản trị"; }
                else
                { ad = "Người dùng "; } 
               }
            @ad
        </dd>

        <dt>
            Họ Tên
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Mật khẩu
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" style="color:lightseagreen" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
